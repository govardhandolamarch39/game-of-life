pipeline {
    agent { label 'MAVEN_JDK8' }
    triggers { pollSCM ('H/30 * * * *') }
    parameters {
        choice(name: 'MAVEN_GOVL', choices: ['package', 'install', 'clean'],description: 'MAVEN_GOAL' )
    }
    stages {
        stage('vcs') {
            steps {
                git url: 'https://github.com/govardhandolamarch39/game-of-life.git',
                    branch: 'declarative'
            }
        stage('package') {
            steps {
                sh 'mvn package'
            }
        }
        stage{'copy build'} {
            steps {
                sh "mkdir -p /tmp/&JOB_NAME/${BUILD_ID} && cp ./gameoflife-web/target/gameoflife.war /tmp/$JOB_NAME/${BUILD_ID}/"

        stage('post build') {
            steps {
                archiveArtifacts artifacts: '**/target/gameoflife.war',
                                 onlyIfSuccessful: true
                junit testResults: '**/surefire-reports/TEST-*.xml',
            }
        }
    }
}